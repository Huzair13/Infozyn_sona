<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".Pro_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/avatar_profile"
        app:civ_border_width="2dp"
        android:layout_marginTop="15dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/Prof_welcome"
        android:layout_width="269dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="Loading...."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Profile_image"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/Profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:hint="Loading...."
        android:padding="13dp"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/ic_baseline_person_pin_24"
        android:elevation="3dp"
        android:drawablePadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Prof_welcome"
        app:layout_constraintWidth_percent=".8"/>
    <TextView
        android:id="@+id/Profile_Email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:hint="Loading...."
        android:padding="13dp"
        android:layout_marginTop="12.5dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:elevation="3dp"
        android:drawablePadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Profile_name"
        app:layout_constraintWidth_percent=".8"/>
    <EditText
        android:id="@+id/Profile_Phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:hint="Loading...."
        android:padding="13dp"
        android:layout_marginTop="12.5dp"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:elevation="3dp"
        android:drawablePadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Profile_Email"
        app:layout_constraintWidth_percent=".8"/>

    <Button
        android:id="@+id/profile_submit_btn"
        android:layout_width="153dp"
        android:layout_height="43dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/round_curve_bg"
        android:hint="UPDATE PROFILE"
        android:padding="7dp"
        android:textColorHint="@color/black"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_Phone" />


</androidx.constraintlayout.widget.ConstraintLayout>